<UserControl x:Class="XPDF.View.Controls.PathwaySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XPDF.View.Controls"
             xmlns:wwvcs="clr-namespace:Walkways.Component.View.Controls;assembly=Walkways"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="ElementParent">
    
    <Grid DataContext="{Binding ElementName=ElementParent}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <wwvcs:WalkingTextBox Grid.Column="0" PlaceholderText="{Binding Path=TextBoxPlaceholder}" 
                              VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Stretch" 
                              Text="{Binding Path=TextBoxText}" HorizontalAlignment="Stretch" 
                              Margin="3,0,3,0"/>
        
        <Button Grid.Column="1" x:Name="InputButton"  Width="105" Height="35" 
                Command="{Binding Path=ButtonCommand}" 
                Content="{Binding Path=ButtonContent}"/>
    </Grid>
</UserControl>
